/* pages/user/index.wxss */
.container{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #f2f2f2;
}
.user-title{
  padding: 50rpx 0;
  text-align: center;
  background-color: #fff;
}
.user-photo{
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  border-radius: 50%;
  box-shadow: 0 0 20rpx #f2f2f2;
}
.user-photo image{
  width: 100%;
  height: 100%;
}
.user-name{
  margin-top: 50rpx;
}
.user-wallent{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 40rpx 20rpx;
  background-color: #fff;
}
button{
  width: 90%;
}